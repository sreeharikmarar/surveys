
   
  <div class="span8 well" style="padding:10px;">
    <%= simple_form_for(@survey , :as => :survey, url: { action: "create" } ,  :role => "form" , :html=>{:class=>"form-horizontal"} ) do |f| %>
      <div class="form-inputs" style="margin: 10px 20px;">
        
        <div class="form-group">
          <%= f.input :title, :label =>false,  :input_html=> { :class=> 'form-control' ,:style=>"width:100%;margin-top:5px;"}, :required => true, :placeholder=>"* Title" %>
        </div>
        
        <div class="form-group">
          <%= f.input :description, :label =>false, :required => true, :placeholder=>"* description", input_html: { :class=> 'form-control' ,:style=>"width:100%;margin-top:5px;height:50px;" } %>
        </div>

          
        <%= f.simple_fields_for :questions do |c|  %>
          <% i =+ 1 %>
           <%= c.input :text, :label =>false, :required => true, :placeholder=>"* Question ", input_html: { :class=> 'form-control' ,:style=>"width:100%;margin-top:5px;margin-top:5px;"} %>

           <%= c.input :type, :required => true, :as => :select, :label=>false, :collection =>@type, :prompt => "Please Select",:input_html=>{ :onchange => "showOptions(this,"+"#{c.index});", :class=>"form-control" , :style=>"margin-top:5px;"} %>

           <div id="option_<%= c.index %>" style="display:none;margin-top:5px;">
           <%= c.simple_fields_for :option do |o|  %>

               <%= o.input :option_1, :required => true, :label=>false, :input_html=>{:class=>"form-control"} %>

               <%= o.input :option_2, :required => true, :label=>false, :input_html=>{:class=>"form-control"} %>

               <%= o.input :option_3, :required => true, :label=>false, :input_html=>{:class=>"form-control"} %>

               <%= o.input :option_4, :required => true, :label=>false, :input_html=>{:class=>"form-control"} %>
            <% end %>
          </div>

        <% end %>
        
          <%= f.submit "Sign In", :id=> "", :class=>"btn btn-sml btn-primary", :style=>"margin-top:10px; ", "data-loading-text"=>"Signing In..." %>
       </div>
      
    <% end %>

</div>
<script type="text/javascript">

  function showOptions(obj,id){
    
    if(obj.value == "MultipleChoiceSingle" || obj.value == "MultipleChoiceMultiple")
      $("#option_"+id).show();
    else
        $("#option_"+id).hide();
  }


</script>